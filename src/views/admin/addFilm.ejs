<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <style>
    .modal-content {
      background-image: radial-gradient(circle at 17% 1%,
          rgba(198, 198, 198, 0.03) 0,
          rgba(198, 198, 198, 0.03) 50%,
          rgba(42, 42, 42, 0.03) 50%,
          rgba(42, 42, 42, 0.03) 100%),
        radial-gradient(circle at 8% 81%,
          rgba(253, 253, 253, 0.03) 0,
          rgba(253, 253, 253, 0.03) 50%,
          rgba(36, 36, 36, 0.03) 50%,
          rgba(36, 36, 36, 0.03) 100%),
        radial-gradient(circle at 83% 29%,
          rgba(164, 164, 164, 0.03) 0,
          rgba(164, 164, 164, 0.03) 50%,
          rgba(60, 60, 60, 0.03) 50%,
          rgba(60, 60, 60, 0.03) 100%),
        radial-gradient(circle at 96% 62%,
          rgba(170, 170, 170, 0.03) 0,
          rgba(170, 170, 170, 0.03) 50%,
          rgba(169, 169, 169, 0.03) 50%,
          rgba(169, 169, 169, 0.03) 100%),
        linear-gradient(338deg, #028dd5, #05ac51);
    }

    .rotate {
      animation: rotation 2s infinite linear;
    }

    @keyframes rotation {
      from {
        transform: rotate(0deg);
      }

      to {
        transform: rotate(359deg);
      }
    }
  </style>
</head>

<body class="bg-theme bg-theme13">
  <!--wrapper-->
  <div class="wrapper">
    <!--sidebar wrapper -->
    <%- include('./partials/sidebar') %>
    <!--end sidebar wrapper -->
    <!--start header -->
    <%- include('./partials/header') %>
    <!--end header -->
    <!--start page wrapper -->
    <div class="page-wrapper">
      <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
          <div class="breadcrumb-title pe-3">Films</div>
          <div class="ps-3">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                  <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item" aria-current="page">Films</li>
                <li class="breadcrumb-item active" aria-current="page">Add Film</li>
              </ol>
            </nav>
          </div>
        </div>
        <!--end breadcrumb-->
        <div class="card">
          <div class="card-body">
            <form class="row g-3" id="form-info-film">
              <div class="col-12 mb-3">
                <label class="form-label">Name:</label>
                <input type="text" class="form-control" name="name" placeholder="Name" required />
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Original Name:</label>
                <input type="text" class="form-control" name="original_name" placeholder="Original Name" required />
              </div>
              <div class="col-12 col-md-6 mb-3">
                <label class="form-label">Status:</label>
                <select class="form-select" name="status" placeholder="Status" required>
                  <option selected value="complete">Complete</option>
                  <option value="ongoing">Ongoing</option>
                  <option value="trailer">Trailer</option>
                </select>
              </div>
              <div class="col-12 col-md-6 mb-3">
                <label class="form-label">Viewable:</label>
                <select class="form-select" name="viewable" placeholder="Viewable" required>
                  <option selected value="1">Public</option>
                  <option value="">Hidden</option>
                </select>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Poster:</label>
                <div class="input-group">
                  <input type="url" class="form-control" name="poster" placeholder="http://example.com/images/poster-film.jpg" required />
                  <input type="file" accept="image/*" class="form-control" id="upload_poster" style="display: none" />
                  <label class="input-group-text" for="upload_poster"><i class="bx bx-image-add"></i></label>
                  <label class="input-group-text btn-upload-img"><i class="me-2 bx bx-cloud-upload"></i>Upload</label>
                </div>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Backdrops:</label>
                <div class="input-group">
                  <input type="url" class="form-control" name="backdrops" placeholder="http://example.com/images/backdrops-film.jpg" required />
                  <input type="file" accept="image/*" class="form-control" id="upload_backdrops" style="display: none" />
                  <label class="input-group-text" for="upload_backdrops"><i class="bx bx-image-add"></i></label>
                  <label class="input-group-text btn-upload-img"><i class="me-2 bx bx-cloud-upload"></i>Upload</label>
                </div>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Backdrops Canonical:</label>
                <div class="input-group">
                  <input type="url" class="form-control" name="backdrops_canonical" placeholder="http://example.com/images/backdrops-canonical-film.jpg" />
                  <input type="file" accept="image/*" class="form-control" id="upload_backdrops_canonical" style="display: none" />
                  <label class="input-group-text" for="upload_backdrops_canonical"><i class="bx bx-image-add"></i></label>
                  <label class="input-group-text btn-upload-img"><i class="me-2 bx bx-cloud-upload"></i>Upload</label>
                </div>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Logo:</label>
                <div class="input-group">
                  <input type="url" class="form-control" name="logo" placeholder="http://example.com/images/logo-film.jpg" />
                  <input type="file" accept="image/*" class="form-control" id="upload_logo" style="display: none" />
                  <label class="input-group-text" for="upload_logo"><i class="bx bx-image-add"></i></label>
                  <label class="input-group-text btn-upload-img"><i class="me-2 bx bx-cloud-upload"></i>Upload</label>
                </div>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Categories:</label>
                <select class="multiple-select" name="categories[]" data-placeholder="Choose Categories" multiple="multiple" required>
                  <% for (const category of categories) { %>
                  <option value="<%=category.category_id%>"><%=category.category_name%></option>
                  <% } %>
                </select>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Countries:</label>
                <select class="multiple-select" name="countries[]" data-placeholder="Choose Countries" multiple="multiple" required>
                  <% for (const country of countries) { %>
                  <option value="<%=country.country_id%>"><%=country.country_name%></option>
                  <% } %>
                </select>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Trailer:</label>
                <input type="url" class="form-control" name="trailer" placeholder="Trailer" value="" />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Duration:</label>
                <input class="form-control" min="0" name="duration" placeholder="Duration" value="" />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Quality:</label>
                <input class="form-control" name="quality" placeholder="Quality" value="" required />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Release:</label>
                <input class="form-control" type="number" min="1000" max="2050" name="year" placeholder="Release" required />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Imdb:</label>
                <input class="form-control" name="imdb" placeholder="Imdb" value="" />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Language:</label>
                <select class="form-select" name="language" required>
                  <option selected value="Vietsub">Vietsub</option>
                  <option value="Thuyết Minh">Thuyết Minh</option>
                  <option value="Lồng Tiếng">Lồng Tiếng</option>
                  <option value="Vietsub + Thuyết Minh">Vietsub + Thuyết Minh</option>
                  <option value="Vietsub + Lồng Tiếng">Vietsub + Lồng Tiếng</option>
                  <option value="TM + LT">TM + LT</option>
                  <option value="Nosub">Nosub</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Type:</label>
                <select class="form-select" name="type" required>
                  <option selected value="movie">Movie</option>
                  <option value="series">Series</option>
                  <option value="trailer">Trailer</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">In Cinema?:</label>
                <select class="form-select" name="in_cinema">
                  <option selected value="">No</option>
                  <option value="1">Yes</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Recommend?:</label>
                <select class="form-select" name="recommend">
                  <option selected value="">No</option>
                  <option value="1">Yes</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Canonical?:</label>
                <select class="form-select" name="canonical">
                  <option selected value="">No</option>
                  <option value="1">Yes</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Notify:</label>
                <input class="form-control" name="notify" placeholder="Notify" />
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Description:</label>
                <textarea class="form-control" rows="3" name="description" placeholder="Description" required></textarea>
              </div>
              <div class="col-12 mb-3">
                <label class="form-label">Info:</label>
                <textarea class="form-control" rows="5" name="info" id="info_film" placeholder="Info" required></textarea>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Tags:</label>
                <input type="text" class="form-control" name="tags" data-role="tagsinput" placeholder="Tags" value="" />
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">Slug:</label>
                <input class="form-control" name="slug" placeholder="Slug (Auto Create)" value="" />
              </div>
              <hr />
              <div class="col-12 mb-3">
                <button type="submit" class="btn btn-primary text-white bg-gradient-blues" style="border-color: #fff; float: right">
                  Create
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--end page wrapper -->
    <!--start overlay-->
    <div class="overlay toggle-icon"></div>
    <!--end overlay-->
    <!--Start Back To Top Button-->
    <a href="javaScript:;" class="back-to-top"><i class="bx bxs-up-arrow-alt"></i></a>
    <!--End Back To Top Button-->
    <%- include('./partials/footer') %>
  </div>
  <!--end wrapper-->
  <!-- Start Javascript Import -->
  <%- include('./partials/javascript-import') %>
  <script src="//cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
  <script>
    CKEDITOR.replace('info_film');
  </script>
  <script>
    $('.multiple-select').select2({
      theme: 'bootstrap4',
      width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
      placeholder: $(this).data('placeholder'),
      // placeholder: $(this).attributes.placeholder.textContent,
      allowClear: Boolean($(this).data('allow-clear')),
    });

    // Handle submit new film
    const formInfoFilm = document.getElementById('form-info-film');
    if (formInfoFilm)
      formInfoFilm.onsubmit = function(e) {
        e.preventDefault();
        const formData = {}
          (new FormData(formInfoFilm)).forEach((value, key) => (formData[key] = value));
        $.ajax({
            type: 'POST',
            url: '/admin/films/create',
            data: formData,
          })
          .done((res) => {
            // reset form
            formInfoFilm.reset();
            $('.multiple-select').select2('val', 'All');
            notyf.success(res.message);
          })
          .fail((res) => {
            // reset form
            formInfoFilm.reset();
            $('.multiple-select').select2('val', 'All');
            notyf.error(res.message);
          });
      };
  </script>
  <!-- End Javascript Import -->
</body>

</html>